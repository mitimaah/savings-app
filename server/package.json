{
  "name": "dare-it-challenge-server",
  "version": "0.0.1",
  "description": "NestJS Server written for DareIt Challenge",
  "author": "Adriana Olszak",
  "license": "MIT",
  "keywords": [
    "NestJS",
    "Typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fivethree-team/nestjs-prisma-client-example.git"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint:fix": "eslint \"{src,tests}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,tests}/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs-addons/in-memory-db": "3.0.3",
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/swagger": "^4.8.0",
    "challenge": "file:..",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "reflect-metadata": "^0.1.0",
    "rimraf": "^3.0.0",
    "rxjs": "^6.0.0",
    "swagger-ui-express": "5.0.0",
    "@babel/core": "^7.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "10.2.1",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.8",
    "@types/node": "20.9.2",
    "@types/supertest": "2.0.16",
    "@typescript-eslint/eslint-plugin": "6.11.0",
    "@typescript-eslint/parser": "6.11.0",
    "eslint": "8.54.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-jest": "27.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.7.0",
    "prettier": "2.5.1",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^4.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  }
}
