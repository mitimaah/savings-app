{
  "name": "challenge",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/DareIT-poland/challenge.git",
  "author": "Adriana Olszak <adriana.olszak@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "--legacy-peer-deps": "^0.0.1-security.6",
    "@material-ui/styles": "^4.11.5",
    "@types/react": "^17.0.59",
    "axios": "^0.24.0",
    "cypress": "^9.1.0",
    "prettier": "2.5.1",
    "prop-types": "^15.8.1",
    "react-hook-form": "^7.44.3",
    "react-query": "^3.39.3"
  },
  "scripts": {
    "postinstall": "npm --prefix server/ install --legacy-peer-deps",
    "lint:fix": "run-p -l  lint:server:fix",
    "lint:check": "run-p -l lint:server:check",
    "format:fix": "run-p -l  format:server:fix",
    "format:check": "run-p -l format:server:check",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "start": "run-p -l start:server",
    "start:ci": "run-p -l start:server:ci",
    "build": "run-p -l build:server ",
    "lint:server:fix": "npm run lint:fix --prefix server",
    "lint:server:check": "npm run lint:check --prefix server",
    "format:server:fix": "npm run format:fix --prefix server",
    "format:server:check": "npm run format:check --prefix server",
    "install:server": "cd server && npm install",
    "start:server": "npm run start:dev --prefix server",
    "start:server:ci": "npm run start --prefix server",
    "build:server": "cd server && npm run build",
  },
  "devDependencies": {
    "npm-run-all": "4.1.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,yml,yaml}": [
      "eslint --cache --fix",
      "jest --findRelatedTests"
    ],
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  }
}
